<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_10_transparent" />
            <stroke android:width="1.0dip" android:color="@color/white_50_transparent" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item android:state_enabled="false" android:drawable="@drawable/button_border_disabled" />
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/white" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
</selector>