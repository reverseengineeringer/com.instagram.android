<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/modal_bg" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout android:id="@id/alertTitleContainer" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.instagram.ui.text.FreightSansTextView android:id="@id/appirater_title_area" android:paddingTop="12.0dip" android:text="@string/APPIRATER_MESSAGE_TITLE" app:capitalize="false" style="@style/RowHeaderText" />
        <include layout="@layout/row_header_divider" />
