        <include layout="@layout/row_divider" />
    </FrameLayout>
    <TextView android:textStyle="bold" android:gravity="center" android:id="@id/appirater_cancel_button" android:background="@drawable/dialog_row_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="@dimen/row_height_small" android:text="@string/APPIRATER_CANCEL_BUTTON" />
</LinearLayout>